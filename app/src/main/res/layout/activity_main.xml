<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.piginp.presentation.MainActivity">

    <TextView
        android:id="@+id/data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="No data"
        android:textSize="20sp" />

    <Button
        android:id="@+id/get_data_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_tv"
        android:layout_centerHorizontal="true"
        android:text="Get data" />

    <EditText
        android:id="@+id/put_data_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_data_bt"
        android:layout_marginTop="12dp"
        android:hint="Put data here" />

    <Button
        android:id="@+id/save_data_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/put_data_ed"
        android:layout_centerHorizontal="true"
        android:text="Save data" />


</RelativeLayout>